#include<stdio.h>
int main(){
	int i=1,j=1,k=1,n;
	char ch;
	ch='A';
	while(1){
		scanf("%d",&n);
		if(n==0)
		break;
	   for(i=1;i<=n;i++){
		   for(j=1;j<=n-i;j++)
	       printf(" ");
		   for(k=1;k<=2*i-1;k++){
		   printf("%c",ch);
		   ch++;
	       }
		   printf("\n");
		   ch='A';
	   }
 }
 return 0;
}
