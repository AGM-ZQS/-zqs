#include<stdio.h>
int main(){
	int n,i=1,j=1,k=1,count=0;
	char ch;
	while(scanf(" %c %d",&ch,&n)!=EOF){
		for(i=1;i<=n;i++){
			for(j=1;j<=n-i;j++)
			printf(" ");
			for(k=1;k<=i;k++)
			printf("%c",ch);
		    printf(" ");
			for(k=1;k<=i;k++)
			printf("%c",ch);	   
			printf("\n");
		}
	}
	return 0;
} 
